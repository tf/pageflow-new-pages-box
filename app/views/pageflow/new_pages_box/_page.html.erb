<%= content_tag(:li, class: page_navigation_css_class(page)) do %>
  <%= link_to("##{page.perma_id}",
              class: 'navigation_site_detail',
              data: {link: page.id, chapter_id: page.chapter_id}) do %>

    <div class="title_area">
      <% if chapters_count > 1 %>
        <h2>
          <span class="chapter_title"><%= page.chapter.title %></span>
        </h2>
      <% end %>

      <%= page.title %>
    </div>

    <%= content_tag(:div,
                    '',
                    class: "thumbnail is_#{page.template}",
                    style: "background-image: url('#{asset_path(page.thumbnail_url(:navigation_thumbnail_large))}')") %>
  <% end %>
  <hr />
<% end %>
